<% if flash[:notice] %>
    <%= flash[:notice] %>
<% end %>
<div id="pageBody">
<% @tweets.each do |tweet| %>

    <p><%= tweet.message %></p>
    <p><%= ((Time.current - tweet.tdate)/60).floor %>分前</p>
    <%= image_tag 'orange.jpg' %>
    

 
    <%= link_to '削除', "/tweets/#{tweet.id}", method: :delete %>
    <%= link_to '編集', "/tweets/#{tweet.id}/edit" %>
    <%= link_to 'アカウント', "/tweets/#{tweet.id}" %>

<% end %>
<p><%= link_to '投稿', '/tweets/new' %></p>
</div><br></br>



